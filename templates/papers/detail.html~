<script>

function getRatingData() {
	return JSON.parse($.ajax({
		type: 'GET',
		url: "{% url "get_data" %}",
		dataType: 'json',
		data: {
			'paper': '{{ paper.pk }}'
			},
		global: false,
		async:false,
		success: function(data) {
			return data;
		}
	}).responseText);
}

var sendForm = function(time) {
	var getParticipant = function() {
		return $("#selectbasic").val();
	}
	var getScore = function() {
		return $("#scoreSlider .ui-slider-tip").html()
		// return $('#starVote').raty('score');
	}
	var participant = getParticipant();
	var score = getScore();
	
	$.ajax({
			type: 'POST',
			url: "{% url "add_rating" %}",
			dataType: 'json',
			data: {
				'paperid': '{{ paper.pk }}',
				'participant': participant,
				'score': score,
				'before': time,
				'csrfmiddlewaretoken': '{{ csrf_token }}',
				},
			global: false,
			async:false,
			success: function(data) {
        if (getScore() < 3.5 ) {
          document.getElementById('skata').play();
        } else if (getScore() == 3.5) {
          document.getElementById('threepointfive').play();
        } else if (getScore() == 5.0) {
          lightbox("<div><img src='{{ STATIC_URL }}images/me.jpg' /></div>");
        } else {
          document.getElementById('hello').play();
					// document.getElementById('groovy').play();
        }
				getScores();
				makeChart();
				$("#votingInfo").addClass("alert alert-success alert-dismissable");
				$("#votingInfo").append('<button type="button" class="close" data-dismiss="alert" aria-hidden="true"> &times;</button><p></p>');
				$("#votingInfo > p").html("The vote has been cast");
				$("#votingInfo").show();
			}
		});
}


$(function() {
	$('#scoreSlider').slider({ max: 10 }).slider('pips', { rest: "label", labels: ['0', '0.5', '1', '1.5', '2', '2.5', '3', '3.5', '4', '4.5', '5'] }).slider('float', { handle: true, pips: true, labels: ['0', '0.5', '1', '1.5', '2', '2.5', '3', '3.5', '4', '4.5', '5'] });
	// $("#download-paper").click(function() {
	// 	// alert("gg");
	// 	$.ajax({
	// 		type: "GET",
	// 		url: "{% url "download_pdf" paper.id %}",
	// 		data: {'csrfmiddlewaretoken': '{{ csrf_token }}'},
	//       success: function(msg){
	// $("#infoArea").html('Your message has been sent.')
	//           $(".modal").modal('hide'); //hide popup
	//       },
	//       error: function(){
	//           alert("failure");
	//       }
	// 	});
	// });
	
	
	
	
    $("input#submit").click(function(){
		data = $('#textarea').val();
        $.ajax({
            type: "POST",
            url: "{% url "send_message" pk=paper.pk %}",
			dataType: 'json',
            data: {
				'csrfmiddlewaretoken': '{{ csrf_token }}',
				'data': data
            },
            success: function(msg){
				$("#infoArea").html('Your message has been sent.')
                $(".modal").modal('hide'); //hide popup
            },
            error: function(){
                alert("failure");
            }
        });
    });
	
	getScores();
	makeChart();
	$("#votingInfo").hide()
});
</script>
